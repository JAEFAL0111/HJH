#include<iostream>
#include<cstring>
using namespace std;

int main(void)
{
	char password[11];
	cout << "프로그램을 종료하려면 암호를 입력하세요." << endl;
	while (true)
	{
		cout << "암호 ";
		cin >> password;
		if (strcmp(password, "C++") == 0) //strcmp = 지정된 문자열을 비교해주는 함수, 0 = 참, 1 = 거짓
		{
			cout << "프로그램을 정상 종료합니다." << endl;
				break;
		}ㄴ
		else
			cout << "암호가 틀립니다" << endl;
	}
}
